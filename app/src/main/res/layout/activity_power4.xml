<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Power4Activity">
    <ListView
            android:layout_width="54dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/column0" app:layout_constraintBottom_toBottomOf="@+id/column0"
            android:id="@+id/column6" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/column5"
            app:layout_constraintEnd_toEndOf="@+id/tableDeJeu"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/tableDeJeu"
            android:layout_marginStart="1dp"/>
    <ListView
            android:layout_width="54dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/column0" app:layout_constraintBottom_toBottomOf="@+id/column0"
            android:id="@+id/column4" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/column3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/column5"/>
    <ListView
            android:layout_width="54dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tableDeJeu"
            app:layout_constraintTop_toTopOf="@+id/tableDeJeu"
            android:id="@+id/column0" app:layout_constraintStart_toStartOf="@+id/tableDeJeu"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/column1"
            android:layout_marginStart="6dp" android:layout_marginTop="8dp"/>
    <ListView
            android:layout_width="54dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/column0" app:layout_constraintBottom_toBottomOf="@+id/column0"
            android:id="@+id/column3" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/column2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/column4" android:layout_marginStart="1dp"/>
    <ListView
            android:layout_width="54dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/column0" app:layout_constraintBottom_toBottomOf="@+id/column0"
            android:id="@+id/column2" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/column1" app:layout_constraintEnd_toStartOf="@+id/column3"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="1dp"/>
    <ListView
            android:layout_width="54dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/column0" app:layout_constraintBottom_toBottomOf="@+id/column0"
            android:id="@+id/column1" app:layout_constraintStart_toEndOf="@+id/column0"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/column2"
            android:layout_marginStart="1dp"/>
    <ListView
            android:layout_width="54dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/column0" app:layout_constraintBottom_toBottomOf="@+id/column0"
            android:id="@+id/column5" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/column4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/column6" android:layout_marginStart="1dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nouvellePartie" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:text="@string/newGame"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/yellow"/>
    <TextView
            android:text="@string/Puissance4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titre" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/regles"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="351dp" app:srcCompat="@drawable/puissance4"
            android:id="@+id/tableDeJeu"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            app:layout_constraintBottom_toTopOf="@+id/Joueur"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:visibility="visible"
            android:contentDescription="@string/Puissance4" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/JoueurRouge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Joueur"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="30sp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/nouvellePartie"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/regles"
            app:srcCompat="@drawable/regles"
            app:layout_constraintStart_toEndOf="@+id/titre"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/titre" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/titre" android:contentDescription="@string/regles"/>
</android.support.constraint.ConstraintLayout>