<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TetrisActivity">

    <TextView
            android:text="@string/tetris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Titre" app:layout_constraintTop_toTopOf="@+id/nextPiece"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.49" app:layout_constraintEnd_toStartOf="@+id/nextPiece"
            android:textSize="30sp"/>
    <TextView
            android:text="@string/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Score" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/Left"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.25" android:textSize="30sp"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/tetris"
            android:id="@+id/nextPiece"
            app:layout_constraintStart_toEndOf="@+id/Titre"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/NewGame"
            android:layout_marginStart="32dp" android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Left"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/Rotate"
            app:layout_constraintTop_toTopOf="@+id/Rotate" android:textSize="18sp"/>
    <Button
            android:text="@string/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Right"
            app:layout_constraintTop_toTopOf="@+id/Rotate" app:layout_constraintStart_toEndOf="@+id/Rotate"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp"/>
    <Button
            android:text="@string/rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rotate"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/Left" app:layout_constraintEnd_toStartOf="@+id/Right"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/terrain"/>
    <GridView
            android:layout_width="395dp"
            android:numColumns="12"
            android:layout_height="511dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/NewGame" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/terrain"/>
    <Button
            android:text="@string/newGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NewGame"
            app:layout_constraintTop_toTopOf="@+id/nextPiece"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/nextPiece" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:textSize="14sp"/>
</android.support.constraint.ConstraintLayout>