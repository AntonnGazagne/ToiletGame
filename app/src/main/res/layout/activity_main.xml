<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="ToiletGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            android:textAlignment="center" android:textColor="@color/colorAccent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/morpion_ic"
            android:id="@+id/morpionIcView" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/titleView" app:layout_constraintStart_toEndOf="@+id/yamsIcView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/hangman_ic"
            android:id="@+id/hangmanIcView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/p4IcView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/yamsView"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/yams_ic"
            android:id="@+id/yamsIcView" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/titleView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/morpionIcView"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/p4_ic"
            android:id="@+id/p4IcView"
            app:layout_constraintStart_toEndOf="@+id/hangmanIcView" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/MorpionView"/>
    <TextView
            android:text="Yathzee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/yamsView" app:layout_constraintEnd_toEndOf="@+id/yamsIcView"
            app:layout_constraintStart_toStartOf="@+id/yamsIcView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/yamsIcView" android:textSize="18sp"
            android:textAlignment="center" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="Morpion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/MorpionView" app:layout_constraintStart_toStartOf="@+id/morpionIcView"
            app:layout_constraintEnd_toEndOf="@+id/morpionIcView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/morpionIcView" android:textSize="18sp"
            android:textColor="@color/colorAccent" android:textAlignment="center"/>
    <TextView
            android:text="Pendu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/hangmanView" app:layout_constraintStart_toStartOf="@+id/hangmanIcView"
            app:layout_constraintEnd_toEndOf="@+id/hangmanIcView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hangmanIcView" android:textSize="18sp"
            android:textColor="@color/colorAccent" android:textAlignment="center"/>
    <TextView
            android:text="Puissance 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p4View" app:layout_constraintEnd_toEndOf="@+id/p4IcView"
            app:layout_constraintStart_toStartOf="@+id/p4IcView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/p4IcView" android:textAlignment="center" android:textSize="18sp"
            android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>